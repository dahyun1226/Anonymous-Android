<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle.ToolBar" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Normal18" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Normal16" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextStyle.Normal14" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextStyle.Normal12" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputLayoutStyle.purple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/purple_01</item>
        <item name="android:textCursorDrawable">@color/purple_01</item>
        <item name="android:textColorHint">@color/gray_02</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTheme</item>
        <item name="tabIndicator">@drawable/border_radius_10_white</item>
    </style>

    <style name="TabTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>